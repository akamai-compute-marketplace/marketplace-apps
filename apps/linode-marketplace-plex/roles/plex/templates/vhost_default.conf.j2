server {
    listen 80;
    listen [::]:80;
    server_name {{ _domain }};
    root           /var/www/{{ _domain }}/public_html;
    index          index.html index.php;
    location / {
      try_files $uri $uri/ /index.php?$args =404;
    }
    include snippets/well-known;
    return 301 https://$host$request_uri;
}