server {
    listen 80;
    listen [::] 80;
    server_name {{ _domain }} www.{{ _domain }};
    return 301 https://$host$request_uri;    
    }

server {
    listen 443 ssl;
    listen [::] 443 ssl;
    server_name {{ _domain }} www.{{ _domain }};
    ssl_certificate /etc/letsencrypt/live/{{ _domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ _domain }}/privkey.pem;
    include snippets/well-known
    include snippets/restrictions.conf;

    root /var/www/html
    location / {
      proxy_pass   http://[::1]:32400;
      try_files $uri $uri/ /index.php?$args =404;
      include proxy_params;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      }
    }