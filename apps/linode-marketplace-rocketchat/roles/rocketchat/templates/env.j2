# Rocket.Chat release
RELEASE={{ rocketchat_release }}
ALLOW_EMPTY_PASSWORD=no
MONGODB_ROOT_PASSWORD={{ mongodb_root_password }}

MONGODB_DATABASE={{ mongodb_database }}
MONGODB_USERNAME={{ mongodb_username }}
MONGODB_PASSWORD={{ mongodb_password }}

# Public URL
ROOT_URL=https://{{ _domain }}
# Required to avoid "route URL prefix" errors
ROOT_URL_PATH_PREFIX=/

# MongoDB auth
MONGO_URL=mongodb://{{ mongodb_username }}:{{ mongodb_password }}@mongodb:27017/{{ mongodb_database }}?authSource=admin
MONGO_OPLOG_URL=mongodb://{{ mongodb_username }}:{{ mongodb_password }}@mongodb:27017/local?authSource=admin
MONGODB_REPLICA_SET_KEY={{ mongodb_replica_set_key }} 