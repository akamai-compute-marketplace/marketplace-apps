services:
  etcd:
    image: quay.io/coreos/etcd:v3.5.26
    container_name: milvus-etcd
    command: >
      etcd
      --name milvus-etcd
      --data-dir /etcd-data
      --listen-client-urls=https://0.0.0.0:2379
      --advertise-client-urls=https://milvus-etcd:2379
      --client-cert-auth=true
      --trusted-ca-file=/certs/ca.crt
      --cert-file=/certs/server.crt
      --key-file=/certs/server.key
    volumes:
      - ./etcd-data:/etcd-data
      - ./certs:/certs:ro

    healthcheck:
      test: ["CMD", "etcdctl",
         "--endpoints=https://127.0.0.1:2379",
         "--cacert=/certs/ca.crt",
         "--cert=/certs/client.crt",
         "--key=/certs/client.key",
         "endpoint", "health"]
      interval: 10s
      timeout: 5s
      retries: 5

  minio:
    container_name: milvus-minio
    image: minio/minio:RELEASE.2025-09-07T16-13-09Z-cpuv1
      # image: minio/minio:RELEASE.2024-05-28T17-19-04Z
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    ports:
      - "127.0.0.1:9000:9000"
      - "127.0.0.1:9001:9001"
    volumes:
      - ${DOCKER_VOLUME_DIRECTORY:-.}/volumes/minio:/minio_data
    command: minio server /minio_data --console-address ":9001"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3

  standalone:
    container_name: milvus-standalone
    image: milvusdb/milvus:2.6-20251217-6b728b3d
      #command: sleep infinity
    command: ["milvus", "run", "standalone"]
    security_opt:
    - seccomp:unconfined
    environment:
      MINIO_REGION: us-east-1
      ETCD_ENDPOINTS: https://milvus-etcd:2379
      MINIO_ADDRESS: minio:9000
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    volumes:
      - ${DOCKER_VOLUME_DIRECTORY:-.}/volumes/milvus:/var/lib/milvus
      - /opt/milvus/milvus.yaml:/milvus/configs/milvus.yaml
      - ./certs:/certs:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9091/healthz"]
      interval: 30s
      start_period: 90s
      timeout: 20s
      retries: 3
    ports:
      - "127.0.0.1:19530:19530"
      - "127.0.0.1:19121:19121"
      - "127.0.0.1:9091:9091"
{% if _has_gpu | default(false) %}
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              capabilities: ["gpu"]
              device_ids: ["0"]
{% endif %}
    depends_on:
      - etcd
      - minio
      
networks:
  default:
    name: milvus