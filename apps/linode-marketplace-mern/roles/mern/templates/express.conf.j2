[Unit]
Description=Express.js Backend Service
After=network.target

[Service]
ExecStart=/usr/bin/node /var/www/{{ _domain }}/backend/server.js
Restart=always
User=www-data
Group=www-data
Environment=PATH=/usr/bin
WorkingDirectory=/var/www/{{ _domain }}/backend
RestartSec=3

[Install]
WantedBy=multi-user.target